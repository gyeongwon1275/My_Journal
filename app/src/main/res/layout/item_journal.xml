<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"

    >

    <TextView
        android:id="@+id/item_journal_date"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:ems="6"
        android:gravity="center_vertical"
        android:text="TextView"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/item_journal_image"
        app:layout_constraintTop_toTopOf="@+id/item_journal_image"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/item_journal_mood"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:ems="0"
        android:gravity="center_vertical"



        app:layout_constraintBottom_toBottomOf="@+id/item_journal_time"
        app:layout_constraintStart_toEndOf="@+id/item_journal_time"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <ImageView
        android:id="@+id/item_journal_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@color/colorwhite"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="fitXY"


        />


    <TextView
        android:id="@+id/textView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:text="기분"
        android:textAlignment="center"

        app:layout_constraintBottom_toBottomOf="@+id/item_journal_date"
        app:layout_constraintStart_toEndOf="@+id/item_journal_date"
        app:layout_constraintTop_toTopOf="@+id/item_journal_image" />

    <ImageView
        android:id="@+id/item_journal_mood_image"
        android:layout_width="50dp"
        android:layout_height="0dp"
        android:src="@color/colorblack"

        app:layout_constraintBottom_toBottomOf="@+id/textView"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toTopOf="@+id/textView" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:ems="6"
        android:gravity="center_vertical"
        android:text="작성소요시간"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/item_journal_image"
        app:layout_constraintStart_toEndOf="@+id/item_journal_image"
        app:layout_constraintTop_toBottomOf="@+id/item_journal_date" />

    <TextView
        android:id="@+id/item_journal_time"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:text="시간"
        android:textAlignment="center"
        android:ems="6"
        app:layout_constraintBottom_toBottomOf="@+id/item_journal_image"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/item_journal_date" />


</androidx.constraintlayout.widget.ConstraintLayout>