<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.my_journal.Game.Game_mole_activity">


    <ImageView
        android:id="@+id/digda_1_1"
        android:layout_width="100dp"
        android:layout_height="100dp"

        app:layout_constraintBottom_toBottomOf="@+id/digda_1_2"
        app:layout_constraintEnd_toStartOf="@+id/digda_1_2"
        app:layout_constraintTop_toTopOf="@+id/digda_1_2"
        app:srcCompat="@drawable/dig_down" />

    <ImageView
        android:id="@+id/digda_1_2"
        android:layout_width="100dp"
        android:layout_height="100dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/dig_down" />

    <ImageView
        android:id="@+id/digda_1_3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="@+id/digda_1_2"
        app:layout_constraintStart_toEndOf="@+id/digda_1_2"
        app:layout_constraintTop_toTopOf="@+id/digda_1_2"
        app:srcCompat="@drawable/dig_down" />

    <ImageView
        android:id="@+id/digda_2_1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="@+id/digda_1_1"
        app:layout_constraintTop_toBottomOf="@+id/digda_1_1"
        app:srcCompat="@drawable/dig_down" />

    <ImageView
        android:id="@+id/digda_2_2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="@+id/digda_2_1"
        app:layout_constraintStart_toEndOf="@+id/digda_2_1"
        app:layout_constraintTop_toTopOf="@+id/digda_2_1"
        app:srcCompat="@drawable/dig_down" />

    <ImageView
        android:id="@+id/digda_2_3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="@+id/digda_2_1"
        app:layout_constraintStart_toEndOf="@+id/digda_2_2"
        app:layout_constraintTop_toTopOf="@+id/digda_2_1"
        app:srcCompat="@drawable/dig_down" />

    <ImageView
        android:id="@+id/digda_3_1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="@+id/digda_1_1"
        app:layout_constraintTop_toBottomOf="@+id/digda_2_1"
        app:srcCompat="@drawable/dig_down" />

    <ImageView
        android:id="@+id/digda_3_2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="@+id/digda_3_1"
        app:layout_constraintStart_toEndOf="@+id/digda_3_1"
        app:layout_constraintTop_toTopOf="@+id/digda_3_1"
        app:srcCompat="@drawable/dig_down" />

    <ImageView
        android:id="@+id/digda_3_3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="@+id/digda_3_1"
        app:layout_constraintStart_toEndOf="@+id/digda_3_2"
        app:layout_constraintTop_toTopOf="@+id/digda_3_1"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/dig_down" />

    <TextView
        android:id="@+id/count_digda"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="40dp"
        android:ems="6"
        android:gravity="center_vertical"
        android:text="TextView"
        android:textColor="@color/colorblack"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/game_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="132dp"
        android:text="start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/time_game"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:textColor="@color/colorblack"
        android:text="time"
        android:ems="6"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/count_digda"
        app:layout_constraintEnd_toStartOf="@+id/count_digda"
        app:layout_constraintTop_toTopOf="@+id/count_digda" />


</androidx.constraintlayout.widget.ConstraintLayout>
