<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.my_journal.ASMR.Asmr_menu_activity">


    <com.airbnb.lottie.LottieAnimationView

        android:id="@+id/amsr_lottie"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:lottie_autoPlay="true"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_fileName="1114-saving-quotes.json"
        app:lottie_loop="false" />

    <ImageView
        android:id="@+id/small_river"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toEndOf="@+id/wave"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="@+id/wave"
        app:srcCompat="@drawable/small_river" />

    <ImageView
        android:id="@+id/wave"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="fitXY"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toStartOf="@+id/fire"

        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/rain"
        app:layout_constraintTop_toBottomOf="@+id/text_wave"
        app:srcCompat="@drawable/wave" />

    <ImageView
        android:id="@+id/fire"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="fitXY"
        android:layout_marginLeft="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/rain"
        app:layout_constraintStart_toEndOf="@+id/rain"
        app:layout_constraintTop_toTopOf="@+id/rain"
        app:srcCompat="@drawable/fire" />

    <ImageView
        android:id="@+id/rain"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3"
        app:layout_constraintHorizontal_bias="0.1"
        app:srcCompat="@drawable/rain" />

    <TextView
        android:id="@+id/text_rain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="빗소리"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/rain"
        app:layout_constraintEnd_toStartOf="@+id/fire"
        app:layout_constraintStart_toStartOf="@+id/rain" />

    <TextView
        android:id="@+id/text_fire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="모닥불소리"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/fire"
        app:layout_constraintEnd_toEndOf="@+id/fire"
        app:layout_constraintStart_toStartOf="@+id/fire" />

    <TextView
        android:id="@+id/text_wave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="파도소리"
        app:layout_constraintEnd_toStartOf="@+id/small_river"
        app:layout_constraintStart_toStartOf="@+id/wave"
        app:layout_constraintTop_toBottomOf="@+id/rain" />

    <TextView
        android:id="@+id/text_small_river"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="시냇물소리"
        app:layout_constraintBottom_toTopOf="@+id/small_river"
        app:layout_constraintEnd_toEndOf="@+id/small_river"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="@+id/small_river"
        app:layout_constraintTop_toTopOf="@+id/text_wave"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>
