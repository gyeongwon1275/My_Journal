<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >


    <EditText
        android:id="@+id/edit_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:ems="10"
        android:gravity="center"
        android:textAlignment="center"
        android:hint="습관이름"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4" />

    <EditText
        android:id="@+id/edit_second"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="@+id/edit_first"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/edit_first"
        app:layout_constraintTop_toBottomOf="@+id/edit_first"
        android:hint="습관횟수"
        />

    <Button
        android:id="@+id/button_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="수정"
        app:layout_constraintEnd_toEndOf="@+id/edit_first"
        app:layout_constraintStart_toStartOf="@+id/edit_first"
        app:layout_constraintTop_toBottomOf="@+id/edit_second" />

    <ImageButton
        android:id="@+id/habit_imageButton"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@+id/button_submit"


        app:layout_constraintEnd_toEndOf="@+id/edit_second"
        app:layout_constraintTop_toTopOf="@+id/button_submit"
        app:srcCompat="@drawable/ic_image_black_24dp" />
</androidx.constraintlayout.widget.ConstraintLayout>